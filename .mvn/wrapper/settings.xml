<?xml version="1.0" encoding="UTF-8" ?>

<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <servers>
    <server>
      <id>xplat-releases</id>
      <username>admin</username>
      <password>admin123</password>
    </server>
    <server>
      <id>xplat-snapshots</id>
      <username>admin</username>
      <password>admin123</password>
    </server>
    <server>
      <id>xplat-thirdparty</id>
      <username>admin</username>
      <password>admin123</password>
    </server>

  </servers>

  <profiles>
    <profile>
      <id>xforceplus</id>
      <repositories>
        <repository>
          <id>nexus</id>
          <name>Nexus Public Repository</name>
          <url>http://120.27.140.65:8081/nexus/content/groups/public/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
        <repository>
          <id>xplat-releases</id>
          <name>Nexus Release Repository</name>
          <url>http://120.27.140.65:8081/nexus/content/repositories/releases/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
        </repository>
        <repository>
          <id>xplat-snapshots</id>
          <name>Nexus Snapshot Repository</name>
          <url>http://120.27.140.65:8081/nexus/content/repositories/snapshots</url>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
        <repository>
          <id>xplat-thirdparty</id>
          <name>Nexus thirdparty Repository</name>
          <url>http://120.27.140.65:8081/nexus/content/repositories/thirdparty/</url>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>xplat-plugin-public</id>
          <url>http://120.27.140.65:8081/nexus/content/groups/public/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>xplat-snapshot</id>
          <url>http://120.27.140.65:8081/nexus/content/repositories/snapshots/</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>

  </profiles>

  <activeProfiles>
    <activeProfile>xforceplus</activeProfile>
  </activeProfiles>

</settings>